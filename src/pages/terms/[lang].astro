---
/**
 * Terms of Service Page (Multi-language)
 * Legal Protection + Liability Limitation
 */
import { locales, type Locale } from '../../i18n/config';
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return locales.map((locale) => ({
    params: { lang: locale },
    props: { locale }
  }));
}

interface Props {
  locale?: Locale;
}

// Get locale from route parameters (dev mode) or props (build mode)
const locale = (Astro.props.locale || Astro.params.lang) as Locale;
const currentYear = new Date().getFullYear();
---

<Layout title={`Terms of Service - ${locale.toUpperCase()}`} {locale}>
  <div style={{
    maxWidth: '800px',
    margin: '0 auto',
    padding: '4rem 1.5rem 2rem',
    minHeight: '60vh'
  }}>
    <h1 style={{
      fontSize: 'clamp(2rem, 5vw, 3rem)',
      fontWeight: '700',
      marginBottom: '2rem',
      background: 'linear-gradient(90deg, #e91e63, #9c27b0)',
      WebkitBackgroundClip: 'text',
      WebkitTextFillColor: 'transparent',
      backgroundClip: 'text'
    }}>
      ðŸ“œ Terms of Service
    </h1>

    <p style={{
      fontSize: '0.875rem',
      color: 'var(--text-secondary)',
      marginBottom: '2rem',
      fontStyle: 'italic'
    }}>
      Last updated: January 14, {currentYear}
    </p>

    <div style={{
      display: 'flex',
      flexDirection: 'column',
      gap: '2rem',
      lineHeight: '1.8',
      color: 'var(--text-primary)'
    }}>
      <section style={{
        padding: '1.5rem',
        background: 'var(--bg-color)',
        borderRadius: 'var(--radius-lg)',
        borderLeft: '4px solid var(--accent-color)'
