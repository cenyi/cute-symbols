---
/**
 * Contact Us Page
 * User feedback and support
 */
import { locales, type Locale } from '../../i18n/config';
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return locales.map((locale) => ({
    params: { lang: locale },
    props: { locale }
  }));
}

interface Props {
  locale?: Locale;
}

// Get locale from route parameters (dev mode) or props (build mode)
const locale = (Astro.props.locale || Astro.params.lang) as Locale;
---

<Layout title={`Contact Us - ${locale.toUpperCase()}`} {locale}>
  <div style={{
    maxWidth: '800px',
    margin: '0 auto',
    padding: '4rem 1.5rem 2rem',
    minHeight: '60vh'
  }}>
    <h1 style={{
      fontSize: 'clamp(2rem, 5vw, 3rem)',
      fontWeight: '700',
      marginBottom: '2rem',
      background: 'linear-gradient(90deg, #e91e63, #9c27b0)',
      WebkitBackgroundClip: 'text',
      WebkitTextFillColor: 'transparent',
      backgroundClip: 'text',
      textAlign: 'center'
    }}>
      üìß Contact Us
    </h1>

    <p style={{
      textAlign: 'center',
      fontSize: '1.125rem',
      color: 'var(--text-secondary)',
      marginBottom: '3rem',
      maxWidth: '600px',
      margin: '0 auto 3rem'
    }}>
      üíó Whether you have questions, suggestions, or just want to say hi, we'd love to hear from you!
    </p>

    <div style={{
      display: 'grid',
      gap: '2rem',
      marginBottom: '3rem'
    }}>
      {/* Email contact */}
      <section style={{
        background: 'var(--card-bg)',
        border: '1px solid var(--border-color)',
        borderRadius: 'var(--radius-lg)',
        padding: '2rem',
        textAlign: 'center',
        transition: 'all 0.3s'
      }}>
        <div style={{
          fontSize: '3rem',
          marginBottom: '1rem',
          animation: 'bounce 2s ease-in-out infinite'
        }}>
          üìß
        </div>
        <h2 style={{
          fontSize: '1.5rem',
          fontWeight: '700',
          marginBottom: '1rem',
          color: 'var(--accent-color)'
        }}>
          Send us an Email
        </h2>
        <a
          href="mailto:hi@cutesymbols.com"
          style={{
            fontSize: '1.125rem',
            color: 'var(--accent-color)',
            fontWeight: '600',
            textDecoration: 'none',
            wordBreak: 'break-all'
          }}
        >
          hi@cutesymbols.com
        </a>
        <p style={{
          marginTop: '1rem',
          fontSize: '0.875rem',
          color: 'var(--text-secondary)'
        }}>
          We typically respond within 24 hours
        </p>
      </section>

      {/* Contact reasons */}
      <section style={{
        background: 'var(--card-bg)',
        border: '1px solid var(--border-color)',
        borderRadius: 'var(--radius-lg)',
        padding: '2rem'
      }}>
        <h2 style={{
          fontSize: '1.5rem',
          fontWeight: '700',
          marginBottom: '1.5rem',
          color: 'var(--text-primary)',
          textAlign: 'center'
        }}>
          üí° You might want to contact us about...
        </h2>

        <div style={{
          display: 'grid',
          gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))',
          gap: '1rem'
        }}>
          {[
            {
              icon: 'üíñ',
              title: 'Symbol Suggestions',
              desc: 'Want to add new symbols or categories?'
            },
            {
              icon: 'üêõ',
              title: 'Report a Bug',
              desc: 'Found an issue with the website?'
            },
            {
              icon: 'üí°',
              title: 'Feature Feedback',
              desc: 'Have a great idea to share?'
            },
            {
              icon: 'ü§ù',
              title: 'Partnership Inquiries',
              desc: 'Want to collaborate with us?'
            },
            {
              icon: 'üìù',
              title: 'Copyright Issues',
              desc: 'Need content removed?'
            },
            {
              icon: 'üí¨',
              title: 'Other Questions',
              desc: 'Just want to say hi?'
            }
          ].map((item) => (
            <div
              style={{
                padding: '1rem',
                background: 'var(--bg-color)',
                borderRadius: 'var(--radius-md)',
                textAlign: 'center',
                transition: 'transform 0.2s, box-shadow 0.2s'
              }}
              class="contact-card"
            >
              <div style={{ fontSize: '2rem', marginBottom: '0.5rem' }}>
                {item.icon}
              </div>
              <div style={{
                fontWeight: '600',
                marginBottom: '0.5rem',
                color: 'var(--text-primary)'
              }}>
                {item.title}
              </div>
              <div style={{
                fontSize: '0.875rem',
                color: 'var(--text-secondary)'
              }}>
                {item.desc}
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>

    {/* Quick response promise */}
    <section style={{
      background: 'linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(156, 39, 176, 0.1))',
      borderRadius: 'var(--radius-lg)',
      padding: '2rem',
      textAlign: 'center',
      border: '2px solid rgba(255, 107, 157, 0.2)'
    }}>
      <h2 style={{
        fontSize: '1.5rem',
        fontWeight: '700',
        marginBottom: '1rem',
        color: 'var(--accent-color)'
      }}>
        ‚ö° Quick Response Promise
      </h2>
      <p style={{ marginBottom: '1rem', color: 'var(--text-primary)' }}>
        We promise to respond to all emails within 24 hours on business days
      </p>
      <div style={{
        display: 'flex',
        gap: '2rem',
        justifyContent: 'center',
        flexWrap: 'wrap',
        marginTop: '1.5rem'
      }}>
        <div style={{ textAlign: 'center' }}>
          <div style={{
            fontSize: '2rem',
            fontWeight: '700',
            color: 'var(--accent-color)'
          }}>
            24h
          </div>
          <div style={{ fontSize: '0.875rem', color: 'var(--text-secondary)' }}>
            Avg Response Time
          </div>
        </div>
        <div style={{ textAlign: 'center' }}>
          <div style={{
            fontSize: '2rem',
            fontWeight: '700',
            color: 'var(--accent-color)'
          }}>
            100%
          </div>
          <div style={{ fontSize: '0.875rem', color: 'var(--text-secondary)' }}>
            Email Response Rate
          </div>
        </div>
        <div style={{ textAlign: 'center' }}>
          <div style={{
            fontSize: '2rem',
            fontWeight: '700',
            color: 'var(--accent-color)'
          }}>
            üíó
          </div>
          <div style={{ fontSize: '0.875rem', color: 'var(--text-secondary)' }}>
            Friendly Service
          </div>
        </div>
      </div>
    </section>

    {/* Social media */}
    <section style={{
      marginTop: '3rem',
      textAlign: 'center'
    }}>
      <h2 style={{
        fontSize: '1.5rem',
        fontWeight: '700',
        marginBottom: '1.5rem',
        color: 'var(--text-primary)'
      }}>
        üåê Follow Us
      </h2>
      <div style={{
        display: 'flex',
        gap: '1.5rem',
        justifyContent: 'center',
        flexWrap: 'wrap'
      }}>
        <a
          href="https://instagram.com/cutesymbols"
          target="_blank"
          rel="noopener noreferrer"
          style={{
            padding: '1rem 2rem',
            background: 'var(--card-bg)',
            border: '2px solid var(--border-color)',
            borderRadius: 'var(--radius-md)',
            textDecoration: 'none',
            color: 'var(--text-primary)',
            fontWeight: '600',
            display: 'flex',
            alignItems: 'center',
            gap: '0.5rem',
            transition: 'all 0.3s'
          }}
          class="social-link"
        >
          <span style={{ fontSize: '1.5rem' }}>‚ô•</span>
          <span>Instagram</span>
        </a>
        <a
          href="https://tiktok.com/@cutesymbols"
          target="_blank"
          rel="noopener noreferrer"
          style={{
            padding: '1rem 2rem',
            background: 'var(--card-bg)',
            border: '2px solid var(--border-color)',
            borderRadius: 'var(--radius-md)',
            textDecoration: 'none',
            color: 'var(--text-primary)',
            fontWeight: '600',
            display: 'flex',
            alignItems: 'center',
            gap: '0.5rem',
            transition: 'all 0.3s'
          }}
          class="social-link"
        >
          <span style={{ fontSize: '1.5rem' }}>üå∏</span>
          <span>TikTok</span>
        </a>
        <a
          href="https://twitter.com/cutesymbols"
          target="_blank"
          rel="noopener noreferrer"
          style={{
            padding: '1rem 2rem',
            background: 'var(--card-bg)',
            border: '2px solid var(--border-color)',
            borderRadius: 'var(--radius-md)',
            textDecoration: 'none',
            color: 'var(--text-primary)',
            fontWeight: '600',
            display: 'flex',
            alignItems: 'center',
            gap: '0.5rem',
            transition: 'all 0.3s'
          }}
          class="social-link"
        >
          <span style={{ fontSize: '1.5rem' }}>‚≠ê</span>
          <span>Twitter</span>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--accent-color);
  }

  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent-color);
    color: var(--accent-color);
  }

  @media (max-width: 640px) {
    .social-link {
      padding: 0.75rem 1.5rem !important;
      font-size: 0.875rem !important;
    }
  }
</style>
