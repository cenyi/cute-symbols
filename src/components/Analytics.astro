---
/**
 * Analytics 组件
 * 支持 Google Analytics 4 和 Cloudflare Analytics
 */

// 从环境变量获取 Analytics ID，如果没有则使用默认值
const GA_ID = import.meta.env.GOOGLE_ANALYTICS_ID || 'G-XSTWT0ML6N';
const CF_ANALYTICS_ID = import.meta.env.CLOUDFLARE_ANALYTICS_ID;
---

<!-- Google Analytics 4 -->
{GA_ID && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
    <script is:inline define:vars={{ GA_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_ID, {
        page_title: document.title,
        page_location: window.location.href,
        anonymize_ip: true,
        cookie_flags: 'SameSite=None;Secure'
      });
    </script>
  </>
)}

<!-- Microsoft Clarity -->
<script is:inline>
  (function(c,l,a,r,i,t,y){
    c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
    t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
    y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
  })(window, document, "clarity", "script", "v5ax4xz171");
</script>

<!-- Cloudflare Web Analytics -->
{CF_ANALYTICS_ID && (
  <script
    defer
    src='https://static.cloudflareinsights.com/beacon.min.js'
    data-cf-beacon={`{"token": "${CF_ANALYTICS_ID}"}`}
  ></script>
)}

<!-- Privacy-friendly analytics fallback -->
{!GA_ID && !CF_ANALYTICS_ID && (
  <script is:inline>
    // 简单的页面访问统计（不收集个人信息）
    if (typeof window !== 'undefined') {
      // 只记录页面访问，不发送到外部服务
      console.log('Page view:', window.location.pathname);
    }
  </script>
)}