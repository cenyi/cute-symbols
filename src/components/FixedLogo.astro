---
/**
 * 固定左上角的品牌Logo
 * 可点击回到首页顶部
 */
import { type Locale } from '../i18n/config';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const homeUrl = locale === 'en' ? '/' : `/${locale}/`;
---

<a
  href={homeUrl}
  class="fixed-logo"
  aria-label="Go to homepage"
  style={{
    position: 'fixed',
    top: '1.5rem',
    left: '1.5rem',
    zIndex: 1000,
    display: 'flex',
    alignItems: 'center',
    gap: '0.5rem',
    padding: '0.5rem 1rem',
    background: 'rgba(255, 255, 255, 0.95)',
    backdropFilter: 'blur(20px)',
    border: '1px solid rgba(255, 107, 157, 0.3)',
    borderRadius: '1rem',
    boxShadow: '0 8px 32px rgba(255, 107, 157, 0.2)',
    textDecoration: 'none',
    transition: 'all 0.3s ease',
    cursor: 'pointer'
  }}
  data-astro-cid-logo
>
  <!-- Logo图标 -->
  <span
    style={{
      fontSize: '1.5rem',
      lineHeight: 1,
      display: 'flex',
      alignItems: 'center'
    }}
    data-astro-cid-logo
  >
    ✨
  </span>

  <!-- 品牌名 -->
  <span
    class="logo-text"
    style={{
      fontSize: '0.875rem',
      fontWeight: 700,
      background: 'linear-gradient(135deg, var(--accent-color) 0%, #ffa07a 100%)',
      WebkitBackgroundClip: 'text',
      WebkitTextFillColor: 'transparent',
      backgroundClip: 'text',
      whiteSpace: 'nowrap'
    }}
    data-astro-cid-logo
  >
    CuteSymbols
  </span>
</a>

<style>
  .fixed-logo[data-astro-cid-logo]:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(255, 107, 157, 0.3) !important;
    border-color: var(--accent-color) !important;
  }

  .fixed-logo[data-astro-cid-logo]:active {
    transform: translateY(0) scale(0.98);
  }

  /* 移动端优化 */
  @media (max-width: 768px) {
    .fixed-logo[data-astro-cid-logo] {
      top: 1rem !important;
      left: 1rem !important;
      padding: 0.375rem 0.75rem !important;
      font-size: 0.8125rem !important;
    }

    .fixed-logo[data-astro-cid-logo] span:first-child {
      font-size: 1.25rem !important;
    }

    .logo-text[data-astro-cid-logo] {
      font-size: 0.8125rem !important;
    }
  }

  /* 极小屏幕 - 只显示图标 */
  @media (max-width: 375px) {
    .logo-text[data-astro-cid-logo] {
      display: none;
    }

    .fixed-logo[data-astro-cid-logo] {
      padding: 0.5rem !important;
    }
  }

  /* 深色模式 */
  @media (prefers-color-scheme: dark) {
    .fixed-logo[data-astro-cid-logo] {
      background: rgba(31, 31, 31, 0.95) !important;
      border-color: rgba(255, 107, 157, 0.4) !important;
    }
  }

  /* RTL语言支持 */
  [dir='rtl'] .fixed-logo[data-astro-cid-logo] {
    left: auto !important;
    right: 1.5rem !important;
  }

  @media (max-width: 768px) {
    [dir='rtl'] .fixed-logo[data-astro-cid-logo] {
      right: 1rem !important;
    }
  }
</style>
