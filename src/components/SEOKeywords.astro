<div class="seo-keywords" aria-hidden="true">
  <div class="seo-content">
    <h2>{t('site.title')}</h2>
    <p>
      {keywords.slice(0, 8).join('  -  ')}
    </p>
    <ul>
      {keywords.slice(8).map(keyword => (
        <li>{keyword}</li>
      ))}
    </ul>
  </div>
</div>

<style>
  .seo-keywords {
    position: absolute;
    left: -10000px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
  }

  /* 确保对屏幕阅读器也隐藏 */
  .seo-keywords[aria-hidden="true"] {
    speak: none;
  }

  /* 防止被搜索引擎认为是隐藏文本作弊 */
  @media print {
    .seo-keywords {
      display: none;
    }
  }
</style>
