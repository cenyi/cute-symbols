        style={{
          background: 'var(--card-bg)',
          border: '1px solid var(--border-color)',
          borderRadius: 'var(--radius-lg)',
          overflow: 'hidden',
          transition: 'all 0.3s ease',
          animation: `fadeIn 0.6s ease-out ${index * 0.1}s both`,
          opacity: 0
        }}
      >
        <button
          class="faq-question"
          data-faq={faq.id}
          style={{
            width: '100%',
            padding: '1.25rem 1.5rem',
            background: 'transparent',
            border: 'none',
            textAlign: 'left',
            cursor: 'pointer',
            display: 'flex',
            justifyContent: 'space-between',
            alignItems: 'center',
            fontSize: '1.0625rem',
            fontWeight: 600,
            color: 'var(--text-primary)',
            transition: 'all 0.2s ease'
          }}
        >
          <span style={{ flex: 1, paddingRight: '1rem' }}>
            {(faq.question as any)[locale] || faq.question.en}
          </span>
          <span class="faq-icon" style={{
            fontSize: '1.25rem',
            transition: 'transform 0.3s ease',
            color: 'var(--accent-color)'
          }}>
            +
          </span>
        </button>

        <div
          class="faq-answer"
          data-answer={faq.id}
          style={{
            maxHeight: '0',
            overflow: 'hidden',
            transition: 'max-height 0.3s ease, padding 0.3s ease',
            background: 'var(--bg-color)'
          }}
        >
          <div style={{
            padding: '0 1.5rem 1.25rem',
            fontSize: '0.9375rem',
            lineHeight: 1.7,
            color: 'var(--text-secondary)'
          }}>
            {(faq.answer as any)[locale] || faq.answer.en}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .faq-item:hover {
    border-color: var(--accent-color);
    box-shadow: var(--shadow-md);
  }

  .faq-question:hover {
    background: var(--bg-color);
  }

  .faq-item.active .faq-icon {
    transform: rotate(45deg);
  }

  .faq-item.active .faq-answer {
    max-height: 200px;
    padding-top: 0;
  }

  @media (max-width: 768px) {
    .faq-section {
      padding: 0 1rem;
    }

    .faq-container {
      grid-template-columns: 1fr !important;
    }

    .faq-question {
      padding: 1rem 1.25rem !important;
      font-size: 1rem !important;
    }

    .faq-answer div {
      padding: 0 1.25rem 1rem !important;
      font-size: 0.875rem !important;
    }
  }
</style>

<script>
  // FAQ ф║дф║ТхКЯшГ╜
  document.addEventListener('DOMContentLoaded', () => {
    const faqQuestions = document.querySelectorAll('.faq-question');

    faqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        const faqItem = question.closest('.faq-item');
        const faqId = question.getAttribute('data-faq');
        const answer = document.querySelector(`[data-answer="${faqId}"]`) as HTMLElement;
        const icon = question.querySelector('.faq-icon');

        // хИЗцНвх╜УхЙНFAQ
        const isActive = faqItem?.classList.contains('active');

        // хЕ│щЧнцЙАцЬЙхЕ╢ф╗ЦFAQ
        document.querySelectorAll('.faq-item').forEach(item => {
          if (item !== faqItem) {
            item.classList.remove('active');
            const otherAnswer = item.querySelector('.faq-answer') as HTMLElement;
            const otherIcon = item.querySelector('.faq-icon');
            if (otherAnswer) otherAnswer.style.maxHeight = '0';
            if (otherIcon) otherIcon.textContent = '+';
          }
        });

        // хИЗцНвх╜УхЙНFAQчК╢цАБ
        if (isActive) {
          faqItem?.classList.remove('active');
          if (answer) answer.style.maxHeight = '0';
          if (icon) icon.textContent = '+';
        } else {
          faqItem?.classList.add('active');
          if (answer) answer.style.maxHeight = answer.scrollHeight + 'px';
          if (icon) icon.textContent = 'тИТ';
        }
      });
    });
  });
</script>